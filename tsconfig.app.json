{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/*", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/*.spec.ts"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "strict": true,
    "lib": ["ESNext"],
    "paths": {
      "@app/*": ["./src/*"]
    }
  }
}
